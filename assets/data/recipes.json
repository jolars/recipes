---
layout: null
permalink: /assets/data/recipes.json
---
[
  {% for recipe in site.recipes %}
  {% capture thumb_html %}{% picture thumbnail {{ recipe.img }} 1:1 %}{% endcapture %}{
    "slug": "{{ recipe.slug }}",
    "title": {{ recipe.title | jsonify }},
    "excerpt": {{ recipe.excerpt | jsonify }},
    "url": "{{ recipe.url | relative_url }}",
    "img": "{{ recipe.img }}",
    "imgThumb": {{ thumb_html | jsonify }},
    "servings": "{{ recipe.servings }}",
    "instructions": {{ recipe.content | markdownify | jsonify }},
    "ingredients": {
      {% for part in recipe.ingredients %}
      {{ part[0] | jsonify }}: [
        {% for ingredient in part[1] %}
        {{ ingredient | jsonify }}{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]{% unless forloop.last %},{% endunless %}
      {% endfor %}
    }
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
